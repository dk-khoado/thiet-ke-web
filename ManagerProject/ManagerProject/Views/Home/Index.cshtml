@model IEnumerable<ManagerProject.Models.Cinema>
@{
    Layout = "~/Views/Shared/_Layoutv2.cshtml";
}
<div class="row mt-5">
    <div class="col-12">
        @foreach (var item in Model)
        {
            if (item.isDelete == false)
            {
                <div class="card " style="width: 18rem;display: inline-block">
                    <img class="card-img-top" width="286" height="180" src="@item.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.NameMovie</h5>
                        <p class="card-text">@item.Director</p>
                        @Html.ActionLink("Đặt Vé", "Buy", new { id = item.IDMovie }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            }
        }
    </div>
</div>
<br />
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Image/avengers-4-end-game-2-cuong-phim-1024x512.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Image/H2x1_NSwitchDS_ArenaOfValor_image1600w.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Image/thumb-1920-1003220.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



