
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/overlayout.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        @Html.ActionLink("Rạp Phim Mini", "Index", "Home", null, new { @class = "my-0 mr-md-auto font-weight-normal" })
        <nav class="my-2 my-md-0 mr-md-3">
            @{
                if (Session["id_member"] == null)
                {
                    @Html.ActionLink("Đăng Nhập", "Login", "Home", null, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Đăng Ký", "Register", "Home", null, new { @class = "btn btn-outline-primary" })
                }
                else
                {
                    <a class="p-2 text-dark" href="@Url.Action("History")">Lịch Sử</a>
                    <a class="p-2 text-dark">Xin Chào @Session["name_member"]</a>
                    <a class="p-2 text-dark" href="@Url.Action("Logout")">Đăng Xuất</a>
                }
            }

        </nav>
    </div>
    <div class="container">

        @RenderBody()
        <hr />
        @{ Html.RenderPartial("_Footer");}
    </div>


</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>
